# mlTrainer Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# API Keys - Required
POLYGON_API_KEY=your_polygon_api_key_here
FRED_API_KEY=your_fred_api_key_here

# Optional API Keys (for future integrations)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
QUANDL_API_KEY=your_quandl_api_key_here
IEX_API_KEY=your_iex_cloud_api_key_here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Environment Configuration
MLTRAINER_ENV=development  # Options: development, staging, production

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://user:password@localhost:5432/mltrainer

# Modal Configuration (for deployment)
MODAL_TOKEN_ID=your_modal_token_id_here
MODAL_TOKEN_SECRET=your_modal_token_secret_here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance Configuration
ENABLE_GPU=false
CACHE_ENABLED=true
MAX_WORKERS=4